{
	"title": "MongoDB Identity server POC",
	"description": "Sample .NET 5 Identity server back-end.",
	"company": "asm",
	"email": "asm2025@outlook.com",
	"website": "https://github.com/asm2025/",
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information",
			"Microsoft.AspNetCore.Authorization": "Information"
		}
	},
	"allowedClients": [
		"https://localhost:44000",
		"https://localhost:44001",
		"https://localhost:44002",
		"http://localhost:5000",
		"http://localhost:5001",
		"http://localhost:5002"
	],
	"useSSL": true,
	"basePath": "/",
	"logging": {
		"enabled": true,
		"logLevel": {
			"Default": "Warning"
		}
	},
	"jwt": {
		"signingKey": "endc@m+Y8hZCW&MAEEb5RY2?AeE75d3?",
		"authority": "https://localhost:44000",
		"audience": "IS4API",
		"timeout": 20,
		"refreshInterval": 720
	},
	"data": {
		"Name": "Identity",
		"Host": "localhost",
		"Port": 27017
	},
	"IdentityServer": {
		"clients": [
			{
				"ClientId": "asm",
				"AllowedGrantTypes": [
					"authorization_code"
				],
				"RequireClientSecret": false,
				"RedirectUris": [
					"urn:ietf:wg:oauth:2.0:oob",
					"https://localhost:44100/signin-oidc"
				],
				"AllowedScopes": [
					"openid",
					"profile",
					"fullaccess",
					"roles"
				],
				"AlwaysIncludeUserClaimsInIdToken": true,
				"AllowOfflineAccess": true
			}
		]
	},
	"ApiScopes": [
		{
			"Name": "fullaccess"
		}
	],
	"ApiResources": [
		{
			"Name": "IS4API",
			"Scopes": [
				"fullaccess"
			],
			"UserClaims": [
				"role"
			]
		}
	],
	"swagger": {
		"version": "v1",
		"template": "/{documentName}/swagger",
		"ui": "/v1/swagger"
	},
	"serilog": {
		"Using": [
			"Serilog.Sinks.Console",
			"Serilog.Sinks.File"
		],
		"Properties": {
			"Application": "MongoPOC Identity Server"
		},
		"MinimumLevel": "Warning",
		"Override": {
			"Microsoft": "Warning",
			"System": "Warning",
			"Microsoft.Hosting.Lifetime": "Information",
			"Microsoft.AspNetCore.Authorization": "Information"
		},
		"WriteTo": [
			{
				"Name": "Console"
			},
			{
				"Name": "File",
				"Args": {
					"path": "_logs\\MongoPOC.Identity_.log",
					"fileSizeLimitBytes": 2147483647,
					"rollingInterval": "Day",
					"rollOnFileSizeLimit": true,
					"shared": "true",
					"outputTemplate": "{Timestamp:HH:mm:ss.fff} [{Level:u3}] {Message:lj}{NewLine}{Exception}    {Properties:j}{NewLine}",
					"formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
					"flushToDiskInterval": "00:00:01"
				}
			}
		],
		"Enrich": [
			"FromLogContext",
			"WithMachineName",
			"WithUserName",
			"WithHttpRequestClientHostIP",
			"WithHttpRequestClientHostName",
			"WithHttpRequestRawUrl",
			"WithHttpRequestUserAgent"
		]
	}
}
