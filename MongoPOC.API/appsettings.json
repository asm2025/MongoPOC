{
	"title": "MongoDB POC API",
	"description": "Sample .NET 5 Web API back-end with identity server.",
	"company": "asm",
	"email": "asm2025@outlook.com",
	"website": "https://github.com/asm2025/",
	"allowedClients": [
		"https://localhost:44300",
		"https://localhost:44301",
		"http://localhost:5000",
		"http://localhost:5001"
	],
	"useSSL": true,
	"basePath": "/",
	"data": {
		"Host": "localhost",
		"Port": 27017,
		"Database": "MongoPOC"
	},
	"jwt": {
		"signingKey": "endc@m+Y8hZCW&MAEEb5RY2?AeE75d3?",
		"authority": "https://localhost:44300",
		"audience": "IS4API",
		"timeout": 20,
		"refreshInterval": 720
	},
	"IdentityServer": {
		"clients": [
			{
				"ClientId": "asm",
				"AllowedGrantTypes": [
					"authorization_code"
				],
				"RequireClientSecret": false,
				"RedirectUris": [
					"urn:ietf:wg:oauth:2.0:oob",
					"https://localhost:44100/signin-oidc"
				],
				"AllowedScopes": [
					"openid",
					"profile",
					"fullaccess",
					"roles"
				],
				"AlwaysIncludeUserClaimsInIdToken": true,
				"AllowOfflineAccess": true
			}
		],
		"ApiScopes": [
			{
				"Name": "fullaccess"
			}
		],
		"ApiResources": [
			{
				"Name": "IS4API",
				"Scopes": [
					"fullaccess"
				],
				"UserClaims": [
					"role"
				]
			}
		]
	},
	"swagger": {
		"version": "v1",
		"template": "/{documentName}/swagger",
		"ui": "/v1/swagger"
	},
	"LoggingEnabled": true,
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information",
			"Microsoft.AspNetCore.Authorization": "Information"
		}
	},
	"serilog": {
		"Using": [
			"Serilog.Sinks.Console",
			"Serilog.Sinks.File"
		],
		"Properties": {
			"Application": "MongoPOC API"
		},
		"MinimumLevel": "Warning",
		"Override": {
			"Microsoft": "Warning",
			"System": "Warning",
			"Microsoft.Hosting.Lifetime": "Information",
			"Microsoft.AspNetCore.Authorization": "Information"
		},
		"WriteTo": [
			{
				"Name": "Console"
			},
			{
				"Name": "File",
				"Args": {
					"path": "_logs\\MongoPOC.API_.log",
					"fileSizeLimitBytes": 2147483647,
					"rollingInterval": "Day",
					"rollOnFileSizeLimit": true,
					"shared": "true",
					"outputTemplate": "{Timestamp:HH:mm:ss.fff} [{Level:u3}] {Message:lj}{NewLine}{Exception}    {Properties:j}{NewLine}",
					"formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
					"flushToDiskInterval": "00:00:01"
				}
			}
		],
		"Enrich": [
			"FromLogContext",
			"WithMachineName",
			"WithUserName",
			"WithHttpRequestClientHostIP",
			"WithHttpRequestClientHostName",
			"WithHttpRequestRawUrl",
			"WithHttpRequestUserAgent"
		]
	}
}
